<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Allows the app to access the internet for API communication -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".FantasyApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FantasyFootballApp"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".ui.resetPassword.ResetPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".ui.signup.SignupActivity"
            android:exported="false" />
        <activity
            android:name=".ui.viewTeam.ViewTeamActivity"
            android:exported="false" />
        <activity
            android:name=".ui.teamSetup.CreateTeamActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".ui.leaderboard.LeaderboardActivity"
            android:exported="false" />
        <activity
            android:name=".ui.pickTeam.PickTeamActivity"
            android:exported="false" />
        <activity
            android:name=".ui.main.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>